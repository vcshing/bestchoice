<?xml version='1.0' encoding='utf-8'?>
<widget id="com.skyexplorer.bestchoice" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>bestchoice</name>
    <description>
        A basic Framework7 template for PhoneGap.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
   <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
	 <icon src="icon.png"/>
	  
    <platform name="android">
        <preference name="android-minSdkVersion" value="15" />
			<preference name="android-targetSdkVersion" value="23" />
        <allow-intent href="market:*" />
		
		    <icon src="www/res/icon/android/icon-36-ldpi.png" density="ldpi"/>
			<icon src="www/res/icon/android/icon-48-mdpi.png" density="mdpi"/>
			<icon src="www/res/icon/android/icon-72-hdpi.png" density="hdpi"/>
			<icon src="www/res/icon/android/icon-96-xhdpi.png" density="xhdpi"/>
			<icon src="www/res/icon/android/icon-144-xxhdpi.png" density="xxhdpi"/>
			<icon src="www/res/icon/android/icon-192-xxxhdpi.png" density="xxxhdpi"/>
			<feature name="SocialSharing">
			  <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
			</feature>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
		<feature name="SocialSharing">
		  <param name="ios-package" value="SocialSharing" />
		</feature>
    </platform>
	
	 
	  <platform name="wp8">

	  </platform>
	  <platform name="windows">
	   </platform>
	   
    <preference name="DisallowOverscroll" value="true" />

	<preference name="fullscreen" value="false" />
	<preference name="android-build-tool" value="gradle" />
	<preference name="loadUrlTimeoutValue" value="700000" />
	<preference name="permissions" value="none" />
		
	<feature name="Toast">
	  <param name="android-package" value="nl.xservices.plugins.Toast" />
	</feature>
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
